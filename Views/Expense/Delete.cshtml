@model InAndOut.Models.Expense

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Expense</h1>

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Delete Expense</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Amount"></label>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <input disabled asp-for="Name" class="form-control" />
                    </div>
                    <div class="col-4">
                        <input disabled asp-for="Amount" class="form-control" />
                    </div>
                </div>

            </div>
        </div>

        <div class="form-group row text-right p-3">
            <button type="submit" class="btn btn-danger">Delete</button>
            &nbsp;
            <button class="btn btn-success cancel" asp-action="Index" disableValidation="true">Back</button>
        </div>

    </div>

</form>